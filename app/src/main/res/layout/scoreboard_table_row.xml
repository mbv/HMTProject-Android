<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/scoreboard_table_row"
android:layout_width="fill_parent"
android:layout_height="wrap_content">

<TextView
    android:id = "@+id/sbt_row_number"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="5dp"
    android:text="@string/scoreboard_table_header_number"
    android:textColor="#000" />

<TextView
    android:id = "@+id/sbt_row_end_stop"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:gravity="start"
    android:padding="5dp"
    android:text="@string/scoreboard_table_header_end_stop"
    android:textColor="#000" />

<TextView
    android:id = "@+id/sbt_row_nearest"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="5dp"
    android:text="@string/scoreboard_table_header_nearest"
    android:textColor="#000" />

<TextView
    android:id = "@+id/sbt_row_next"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="5dp"
    android:text="@string/scoreboard_table_header_next"
    android:textColor="#000" />
</LinearLayout>